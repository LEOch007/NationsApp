<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_layout_bg_v1"
    tools:context="com.gy.linjliang.nationsapp.MainActivity">

    <ImageView
        android:src="@mipmap/music_on"
        android:visibility="gone"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/music_on"
        />

    <ImageView
        android:src="@mipmap/music_off"
        android:visibility="visible"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/music_off"
        />

    <ImageView
        android:id="@+id/favorite"
        android:src="@mipmap/favorite2"
        android:layout_width="47dp"
        android:layout_height="39dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp" />

    <Button
        android:layout_width="144dp"
        android:layout_height="127dp"
        android:id="@+id/buttonwei"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="291dp"
        android:layout_marginRight="80dp"
        android:background="#00000000"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="80dp" />

    <Button
        android:layout_width="136dp"
        android:layout_height="138dp"
        android:id="@+id/buttonshu"
        android:background="#00000000"

        android:layout_marginLeft="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="418dp"
        android:layout_marginStart="80dp" />
    <Button
        android:layout_width="138dp"
        android:layout_height="142dp"
        android:id="@+id/buttonwu"
        android:background="#00000000"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="418dp"
        app:layout_constraintLeft_toRightOf="@+id/buttonshu"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />


    <TextView
        android:id="@+id/tubiao"
        android:visibility="gone"
        android:textSize="20sp"
        android:text="*"
        android:textColor="@android:color/white"
        android:background="@drawable/icon_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/wenzi"
        android:visibility="gone"
        android:textSize="18sp"
        android:text="收藏夹"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tubiao"
        app:layout_constraintTop_toTopOf="@+id/tubiao"
        app:layout_constraintLeft_toRightOf="@+id/tubiao" />
    <View
        android:id="@+id/selfline"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#1E000000"
        app:layout_constraintTop_toBottomOf="@+id/tubiao"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/shoucangjia"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/selfline"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>
